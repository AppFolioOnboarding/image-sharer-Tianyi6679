<%= simple_form_for @image,
                    wrapper: :horizontal_form do |f| %>
  <%= f.error_notification %>
  <%= f.input :title%>
  <%= f.input :url %>
  <%= f.input :tag_list, label:'Add Tag(s)', placeholder: 'e.g., Tag1, Tag2, Tag3'%>
  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
