<%= simple_form_for @image do |f| %>

  <%= f.label :title, required: false%><br/>
  <%= f.input_field :title %>
  <%= f.error :title, id: 'title_error' %><br/>
  <%= f.label :url, required: false %><br/>
  <%= f.input_field :url, as: :text%>
  <%= f.error :url, id: 'url_error' %><br/>
  <%= f.submit 'Save' %>
<% end %>
