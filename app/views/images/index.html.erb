<header>
<nav class="navbar navbar-toggleable-md navbar-light fixed-top bg-faded">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="<%=root_path %>">Image Sharer</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="<%=root_path %>">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="#">Show All <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%=new_image_path%>">New Image</a>
      </li>
    </ul>
  </div>
</nav>
</header>
<main role="main" class="container">
  <h1 id="page-header">
    All Images
  </h1>
  <%= link_to "Add your own images", new_image_path %>
  <% @images.each_slice(2) do |imagesby2| %>
    <div class="row">
      <% imagesby2.each do |image| %>
        <div class="col-sm-5">
          <div class="card">
            <%=image_tag(image.url, size: 400, class: 'card-img-top mx-auto')%>
            <div class="card-block">
              <h3 class="card-title"><%= image.title %></h3>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</main>
<footer class="footer">
  <div class="container">
    <span> This is my sticky footer </span>
  </div>
</footer>
